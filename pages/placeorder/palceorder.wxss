.colorline {
  background: #fff;
}

.colorline image {
  width: 100%;
  height: 10rpx;
}

.addressInfo {
  background: #fff;
  font-size: 28rpx;
}

.address_text {
  width: 97%;
  display: flex;
  height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #e6e6e6;
  position: relative;
  left: 2%;
}

.address_text>text {
  width: 20%;
}

.address_text>input {
  width: 65%;
  margin-left: 10%;
  color: #999;
}

.address_text>label {
  width: 65%;
  margin-left: 10%;
  color: #999;
}

.pick_model {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: black;
  opacity: 0.3;
  z-index: 2;
}

.pick_bottom {
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  z-index: 9999;
}

picker-view {
  background: white;
  text-align: center;
}

.savePicker {
  width: 100%;
  background: white;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.savePicker label {
  height: 80rpx;
  line-height: 80rpx;
  width: 130rpx;
  color: #666;
  font-size: 26rpx;
  text-align: center;
  background-color: white;
}
.saveAddress{
  padding-bottom: 5rpx;
}
.saveAddress button {
  font-size: 30rpx;
  margin: 30rpx auto;
  width: 650rpx;
  color: white;
  background: #67da9f;
}

.addressInfos {
  width: 100%;
  background: white;
}

.addressInfo_one {
  width: 90%;
  margin-left: 3%;
  display: inline-block;
}

.add_info_top image {
  margin: 17rpx 20rpx;
  width: 27rpx;
  height: 32rpx;
  vertical-align: top;
}

.add_info_content {
  font-size: 30rpx;
}

.add_info_text {
  display: inline-block;
  vertical-align: middle;
  margin: 10rpx 8rpx;
}

.add_info_text text {
  display: block;
}

.text_two {
  font-size: 26rpx;
  color: #999;
  margin: 20rpx 0;
  letter-spacing: 5rpx;
}

.order-right-icon {
  width: 17rpx;
  height: 30rpx;
}

.cart_product_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 6rpx;
  border: 1rpx solid #e0e0e0;
  margin: 20rpx;
  vertical-align: middle;
}

.cart_product {
  font-size: 28rpx;
}

.products_info {
  display: inline-block;
  vertical-align: middle;
  width: 75%;
}

.cart_product_content {
  display: flex;
  justify-content: space-between;
}

.cart_product_info {
  display: flex;
  justify-content: space-between;
}

.cart_product_content_one {
  display: inline-block;
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.word_color {
  margin-bottom: 108rpx;
}

.leave_word {
  background: white;
  font-size: 28rpx;
}

.word_text {
  width: 97%;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e6e6e6;
  position: relative;
  left: 2%;
  vertical-align: middle;
  padding: 30rpx 0;
}

.word_text_one {
  width: 20%;
}

.word_text_two {
  width: 60%;
  color: #808080;
}

.all_m {
  width: 97%;
  margin-left: 2%;
  vertical-align: middle;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
}

.all_pic {
  margin-right: 2%;
  color: #fc911d;
}

.payment {
  background: white;
  height: 88rpx;
  text-align: right;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.payment_pic {
  display: inline-block;
  font-size: 28rpx;
  margin-right: 30rpx;
  vertical-align: middle;
}

.payment_btn {
  font-size: 30rpx;
  width: 216rpx;
  border-radius: 0;
  background: #fc911d;
  color: #fff;
  display: inline-block;
  vertical-align: middle;
  height: 88rpx;
  line-height: 88rpx;
}

.favourable {
  width: 97%;
  margin-left: 2%;
  margin-top: 20rpx;
  vertical-align: middle;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
}

.choose {
  color: #999;
}

.choose-icon {
  width: 17rpx;
  height: 30rpx;
  margin: 0 15rpx;
  vertical-align: top;
  padding-top: 3rpx;
}

.all_contents {
  margin-top: 20rpx;
  padding-top: 30rpx;
}

.all_content {
  width: 97%;
  margin-left: 2%;
  vertical-align: middle;
  padding-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}
.all_content_text{
  margin: 0 15rpx;
}
