/* pages/address/address.wxss */

.address_input {
  background: #fff;
  font-size: 28rpx;
}

.address_text {
  width: 97%;
  display: flex;
  height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #e6e6e6;
  position: relative;
  left: 2%;
}

.address_text>text {
  width: 20%;
}

.address_text>input {
  width: 65%;
  margin-left: 10%;
  color: #999;
}

.address_text>label {
  width: 65%;
  margin-left: 10%;
  color: #999;
}

.pick_model {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: black;
  opacity: 0.3;
  z-index: 2;
}

.pick_bottom {
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  z-index: 9999;
}

picker-view {
  background: white;
  text-align: center;
}

.savePicker {
  width: 100%;
  background: white;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
}

.savePicker label {
  height: 80rpx;
  line-height: 80rpx;
  width: 130rpx;
  color: #666;
  font-size: 26rpx;
  text-align: center;
  background-color: white;
}

.saveAddress button {
  font-size: 30rpx;
  margin: 30rpx auto;
  width: 650rpx;
  color: white;
  background: #67da9f;
}

.bottom {
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  position: fixed;
}

.bottom button {
  color: white;
  background-color: #fc911d;
  font-size: 28rpx;
  line-height: 88rpx;
  border-radius: 0rpx;
  width: 100%;
}
