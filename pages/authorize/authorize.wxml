<view class='header'>
  <image src='../resource/image/mybanner.png'></image>
  <view class='userInfo'>
    <!-- 如果只是展示用户头像昵称，可以使用 <open-data /> 组件 -->
    <view class='user_img'>
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <open-data type="userNickName"></open-data>
  </view>
</view>
<view class='authorize_text'>
  <text>请授权给我，否则无法使用我！</text>
</view>
<button bindgetuserinfo='getuserinfo' open-type='getUserInfo'>确认授权</button>